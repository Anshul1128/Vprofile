pipeline{
    agent any
    tools{
        maven "MAVEN3"
        jdk "OracleJDK11"
    }
    stages {
        stage('Fetch Code'){
            steps{
                git branch: 'main', url: 'https://github.com/Anshul1128/Vprofile.git'
            }
        }
        stage('Build'){
            steps{
                sh 'mvn install -DskipTests'
            }
            post{
                success{
                    echo'archiving atifacts now...'
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }
        stage('Unit Test'){
            steps{
                sh 'mvn test'
            }
        }
        stage('Checkstyle Analysis'){
            steps {
                sh 'mvn checkstyle:checkstyle'
            }
        }
    }
}